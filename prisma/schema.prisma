generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Invoice {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  shopName        String
  location        String
  gstNumber       String
  invoiceNumber   Int
  customerName    String
  customerId      String
  customerAddress String
  invoiceDate     DateTime
  dueDate         DateTime
  creditDays      Int
  pos             String
  productDetails  Json     
  totalAmount     Float
  discount        Float
  invoiceAmount   Float
  remarks         String?
}
